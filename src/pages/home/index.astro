---
import HomeSvelte from "../../components/HomeSvelte.svelte";
import HomeReact from "../../components/HomeReact.jsx";
import HomeVue from "../../components/HomeVue.vue";

const title = "Home";

const response = await fetch("https://jsonplaceholder.typicode.com/todos");
const data = await response.json();
---
<html lang="en" data-theme="emerald">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>

    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <!-- <link rel="stylesheet" href="/style/global.css"> -->
    <!-- <link rel="stylesheet" href="/style/home.css"> -->

    <link rel="stylesheet" href={Astro.resolve("../../styles/global.css")} />
  </head>
  <body>
    <div class="container p-4">
      <h1 class="text-xl font-semibold">Table with Svelte</h1>
      <HomeSvelte todos={data.slice(0,5)} client:visible />
      <h1 class="text-xl font-semibold">Table with React</h1>
      <HomeReact todos={data.slice(5,10)} client:visible />
      <h1 class="text-xl font-semibold">Table with Vue</h1>
      <HomeVue todos={data.slice(10,15)} client:visible />
    </div>
  </body>
</html>
